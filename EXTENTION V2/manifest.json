{
  "manifest_version": 3,
  "name": "Audio Tool • Presets & Dimensional Audio",
  "version": "3.0",
  "description": "EQ presets, creative modes and dimensional audio (2D–12D). Safer attachment and immediate effect.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Audio Tool",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}